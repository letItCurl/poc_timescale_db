<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Keyword metrics" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Keyword metrics</h1>
    <%= link_to "New keyword metric", new_keyword_metric_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="keyword_metrics" class="min-w-full">
    <% @keyword_metrics.each do |keyword_metric| %>
      <%= render keyword_metric %>
      <p>
        <%= link_to "Show this keyword metric", keyword_metric, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
